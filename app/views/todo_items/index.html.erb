<p id="notice"><%= notice %></p>

<header>
<h1><strong>Ruby on Rails: Working To-Do List App</strong></h1>
</header>

<div container>
<table class='table table-striped table-bordered table-hover table-condensed'>
  <thead>
    <tr>
      <th>To-Do Descriptions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class:'btn btn-default' %></td>
        <td><%= link_to 'Destroy', todo_item, class:'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo item', new_todo_item_path, class:'btn btn-default' %>
</div>
